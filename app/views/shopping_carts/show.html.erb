<h1>Carrito</h1>
<% if @shopping_cart.in_shopping_carts.count > 0 %>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Cantidad</th>
        <th>Precio unidad</th>
        <th>Subtotal</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @shopping_cart.in_shopping_carts.each do |i_sh| product = producto(i_sh.product_barcode) %>
        <tr>
          <td><%= product.barcode %></td>
          <td><%= product.name %></td>
          <td></td>
          <td><%= moneda(product.price) %></td>
          <td></td>
          <td><%= link_to 'Eliminar', i_sh, method: :delete, data: { confirm: '¿Seguro?' } %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
   <h3><strong>Total: </strong><%= moneda(@shopping_cart.total_precio) %></h3>
  </p>
  <%= link_to 'Pagar con PayPal', pagar_path, method: :post, class: "btn btn-success btn-lg" %>
<% else %>
  <h3 align="center">Tu carrito está vacío :(</h3>
  <p align="center"><%= link_to "Productos", products_path, class: "btn btn-default btn-lg" %> <%= link_to "Libros", books_path, class: "btn btn-default btn-lg" %></p>
<% end %>
